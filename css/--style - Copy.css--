 .grid-blog-content {
	display: grid;
	/* grid-area: auto; */
	grid-template-columns: 350px 350px;
	grid-gap: 100px;
 }


.box-blog-content {
	display: flex;
	flex-direction: row;
	align-items: center;
	justify-content: space-between;
	 color: olive;	
	padding-top: 2%;
	padding-left: 200px;
	padding-right: 200px;
}

.blog-card {
	display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: start;
	background-color: rgb(205, 210, 100);
	color: rgb(55, 10, 73);
}

.image {
	width: 350px;
	height: 300px;	
}

.img-avatar {
	vertical-align: middle;
	width: 60px;
	height: 60px;
	border-radius: 50%;
 }
